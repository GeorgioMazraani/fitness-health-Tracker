<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 10px;
        }

        .form-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-submit {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Settings</h1>
        <form id="settingsForm" action="/settings" method="post">
            
            <input type="hidden" name="userID" value="<%=userID %>">

            <div class="form-group">
                <label class="form-label" for="theme">Theme:</label>
                <select class="form-input" id="theme" name="theme">
                    <option value="Light">Light</option>
                    <option value="Dark">Dark</option>
                </select>
            </div>

            <div class="form-group">
                <% if (settings && typeof settings.notificationsEnabled !=='undefined' ) { %>
                    <div class="form-group">
                        <label class="form-label" for="notificationsEnabled">Enable Notifications:</label>
                        <input type="checkbox" id="notificationsEnabled" name="notificationsEnabled"
                            <%=settings.notificationsEnabled ? 'checked' : '' %>>
                    </div>
                    <% } else { %>
                        <div class="form-group">
                            <label class="form-label" for="notificationsEnabled">Enable Notifications:</label>
                            <input type="checkbox" id="notificationsEnabled" name="notificationsEnabled">
                        </div>
                        <% } %>


            </div>

            <button type="submit" class="form-submit">Save Settings</button>
        </form>
    </div>
    <script>
        window.onload = function () {
            const form = document.getElementById('settingsForm');
            if (form) {
                form.addEventListener('submit', function (event) {
                    var checkbox = document.getElementById('notificationsEnabled');
                    checkbox.value = checkbox.checked ? '1' : '0';
                });
            } else {
                console.log('Form not found');
            }
        };


    </script>
    

</body>



</html>